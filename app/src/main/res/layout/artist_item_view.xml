<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/header_rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="360dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_rtl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/michelangelo" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginRight="15sp"
                android:id="@+id/txt_name_rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Michelangelo"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2" />

            <TextView
                android:id="@+id/txt_years_rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1475 - 1564"
                android:textColor="#959595"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/txt_name_rtl"
                app:layout_constraintTop_toBottomOf="@+id/txt_name_rtl" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/header_ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="360dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_ltr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/leonardo_da_vinci" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_name_ltr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Leonardo da Vinci"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="@+id/cardView" />

            <TextView
                android:id="@+id/txt_years_ltr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1425 - 1519"
                android:textColor="#959595"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/txt_name_ltr"
                app:layout_constraintTop_toBottomOf="@+id/txt_name_ltr" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_list"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>