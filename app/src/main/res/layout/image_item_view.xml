<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:visibility="gone"
            android:id="@+id/down_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/CardViewDownRound"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            android:clipChildren="true"
            android:clipToOutline="true">

            <ImageView
                app:cardBackgroundColor="@android:color/transparent"
                android:clipToOutline="true"
                android:id="@+id/img_down_round"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mona_lisa"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:visibility="gone"
            android:id="@+id/up_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/CardViewUpRound"
            android:clipChildren="true"
            android:clipToOutline="true"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <ImageView
                app:cardBackgroundColor="@android:color/transparent"
                android:clipToOutline="true"
                android:id="@+id/img_up_round"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mona_lisa"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:visibility="gone"
            android:id="@+id/rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/img_rect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mona_lisa"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/img_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mona_lisa"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>